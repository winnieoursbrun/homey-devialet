{
  "_comment": "This file is generated. Please edit .homeycompose/app.json instead.",
  "id": "com.devialet",
  "version": "1.0.2",
  "compatibility": ">=12.4.0",
  "sdk": 3,
  "brandColor": "#000000",
  "platforms": [
    "local"
  ],
  "name": {
    "en": "Devialet"
  },
  "description": {
    "en": "Adds support for Devialet devices",
    "fr": "Ajoute la prise en charge des appareils Devialet"
  },
  "category": [
    "music"
  ],
  "permissions": [],
  "images": {
    "small": "/assets/images/small.png",
    "large": "/assets/images/large.png",
    "xlarge": "/assets/images/xlarge.png"
  },
  "author": {
    "name": "winnieoursbrun"
  },
  "source": "https://github.com/winnieoursbrun/homey-devialet",
  "bugs": {
    "url": "https://github.com/winnieoursbrun/homey-devialet/issues"
  },
  "drivers": [
    {
      "name": {
        "en": "Devialet Speaker",
        "fr": "Enceinte Devialet"
      },
      "class": "speaker",
      "capabilities": [
        "volume_set",
        "volume_up",
        "volume_down",
        "volume_mute",
        "speaker_playing",
        "speaker_next",
        "speaker_prev",
        "speaker_artist",
        "speaker_album",
        "speaker_track",
        "onoff"
      ],
      "capabilitiesOptions": {
        "onoff": {
          "title": {
            "en": "Power"
          }
        },
        "volume_set": {
          "title": {
            "en": "Volume"
          }
        },
        "volume_mute": {
          "title": {
            "en": "Mute"
          }
        },
        "speaker_playing": {
          "title": {
            "en": "Playing"
          }
        }
      },
      "platforms": [
        "local"
      ],
      "connectivity": [
        "lan"
      ],
      "discovery": "devialet-speaker",
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ],
      "settings": [
        {
          "type": "group",
          "label": {
            "en": "Device Settings"
          },
          "children": [
            {
              "id": "ip_address",
              "type": "text",
              "label": {
                "en": "IP Address"
              },
              "hint": {
                "en": "The IP address of the Devialet speaker"
              }
            }
          ]
        }
      ],
      "images": {
        "small": "/drivers/speaker/assets/images/small.png",
        "large": "/drivers/speaker/assets/images/large.png"
      },
      "id": "speaker"
    }
  ],
  "discovery": {
    "devialet-speaker": {
      "type": "mdns-sd",
      "mdns-sd": {
        "name": "devialet-http",
        "protocol": "tcp"
      },
      "id": "{{txt.serialNumber}}{{address}}",
      "conditions": [
        [
          {
            "field": "txt.manufacturer",
            "match": {
              "type": "string",
              "value": "Devialet"
            }
          },
          {
            "field": "txt.ipControlVersion",
            "match": {
              "type": "string",
              "value": "1"
            }
          }
        ]
      ]
    }
  }
}